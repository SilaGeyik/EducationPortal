@{
	ViewData["Title"] = "Giriş Yap";
}

<h2>Giriş Yap</h2>

<form method="post">
	<div>
		<label>E-Posta:</label>
		<input type="text" name="email" required/>
	</div>
	<div>
		<label>Şifre:</label>
		<input type="password" name="password" required/>
	</div>

	<button type="submit">Giriş Yap</button>

	@if(ViewBag.Error != null)
	{
		<p style="color:red">@ViewBag.Error</p>
	}
</form>
