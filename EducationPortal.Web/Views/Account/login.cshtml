@{
    ViewData["Title"] = "Giriş Yap";
}

<div class= "row justify-content-center">
    <div class="col-lg-6">
        <div classs= "card o-hidden border-0 shadow-lg my-5">
            <div class ="card-body p-5">
                <h3 class= "text-center text-gray-900 mb-4">Giriş Yap</h3>
                <form method = "post" asp-action="Login">
                    <div class="form-group">
                        <input type = "email" class = "form-control-user" placeholder="E-Posta" name="Email"/>
                    </div>
                    <div class ="form-group">
                        <input type ="password" class = "form-control form-control-user" placeholder="Şifre" name ="Passwor"/>
                    </div>
                    <button type = "submit" class="btn btn-primary btn-user btn-block">Giriş Yap</button>
                </form>
            </div>
        </div>
    </div>
</div>