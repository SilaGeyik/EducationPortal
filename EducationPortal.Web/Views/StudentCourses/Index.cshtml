@model List<EducationPortal.Web.Models.Course>

@{
    ViewData["Title"] = "Kayıt Olduğum Kurslar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Kayıt Olduğum Kurslar</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
            @ViewBag.FullName için kayıtlı dersler
        </h6>
    </div>
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info">
                Henüz kayıt olduğunuz bir ders bulunmamaktadır.
            </div>
        }
        else
        {
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Ders Adı</th>
                        <th>Kredi</th>
                        <th>Öğretim Üyesi</th>
                        <th>Kategori</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.Title</td>
                            <td>@course.Credits</td>
                            <td>@course.Instructor</td>
                            <td>@course.CourseCategory?.Name</td>
                            <td>
                                <form asp-action="Unenroll"
                                      asp-controller="StudentCourses"
                                      method="post"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="courseId" value="@course.CourseId" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-times"></i> Kayıttan Ayrıl
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
