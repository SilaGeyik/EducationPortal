@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="text-primary">Yönetici Paneli</h2>
<div class="row mt-4">
    <div class="col-md-4">
        <div class="card shadow border-left-primary py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Öğrenci Sayısı</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.StudentCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow border-left-success py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Ders Sayısı</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.CourseCount</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow border-left-warning py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Kayıt Sayısı</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.EnrollmentCount</div>
            </div>
        </div>
    </div>
</div>
