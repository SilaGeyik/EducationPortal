@model EducationPortal.Web.ViewModels.StudentDashboardViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Öğrenci Paneli";
}

<div class="container-fluid">

    <h1 class="h3 mb-4 text-gray-800">Öğrenci Paneli</h1>

    <div class="row">

        <!-- Hoş geldiniz kartı -->
        <div class="col-xl-8 col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Hoş Geldiniz</h6>
                </div>
                <div class="card-body">
                    <p>Merhaba @Model.FullName,</p>
                    <p>
                        Bu panel üzerinden kayıt olduğunuz kursları görebilir, yeni kurslara kayıt olabilir ve
                        profil bilgilerinizi güncelleyebilirsiniz.
                    </p>
                </div>
            </div>
        </div>

        <!-- Kayıtlı kurs sayısı -->
        <div class="col-xl-2 col-lg-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Kayıtlı Kurs Sayısı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.TotalEnrolledCourses
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-book fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tamamlanan kurslar -->
        <div class="col-xl-2 col-lg-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Tamamlanan Kurslar
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.CompletedCourses
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

