@model List<EducationPortal.Web.Models.Enrollment>

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Kayıt Listesi</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kayıtlı Öğrenciler</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Öğrenci Adı</th>
                        <th>Ders Adı</th>
                        <th>Kayıt Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.User.FullName</td>
                            <td>@e.Course.Title</td>
                            <td>@e.EnrollmentDate.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
