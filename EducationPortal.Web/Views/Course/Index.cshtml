@model List<EducationPortal.Web.Models.Course>

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Kurs Listesi</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kayıtlı Kurslar</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Ders Adı</th>
                        <th>Açıklama</th>
                        <th>Eğitmen</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.Title</td>
                            <td>@course.Description</td>
                            <td>@course.Instructor</td>
                            <td>
                                <a asp-controller="Course" asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
