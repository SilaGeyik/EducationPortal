@using System.Collections.Generic
@model List<EducationPortal.Web.Models.Course>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kurs Listesi";

    var enrolledIds = ViewBag.EnrolledCourseIds as List<int> ?? new List<int>();
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Kurs Listesi</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Kayıtlı Kurslar</h6>
            <div>
                <button id="refreshCourses" class="btn btn-info btn-sm mr-2">
                    <i class="fas fa-sync-alt"></i> Listeyi Yenile
                </button>

                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Add" class="btn btn-success btn-sm">
                        <i class="fas fa-plus-circle"></i> Yeni Ders Ekle
                    </a>
                }
            </div>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Ders Adı</th>
                        <th>Kredi</th>
                        <th>Öğretim Üyesi</th>
                        <th>Kategori</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr id="row-@course.CourseId">
                            <td>@course.Title</td>
                            <td>@course.Credits</td>
                            <td>@course.Instructor</td>
                            <td>@course.CourseCategory?.Name</td>
                            <td>
                                @* ADMIN: Düzenle / Sil *@
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit"
                                       asp-route-id="@course.CourseId"
                                       class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </a>

                                    <button type="button"
                                            data-id="@course.CourseId"
                                            class="btn btn-danger btn-sm delete-btn">
                                        <i class="fas fa-trash-alt"></i> Sil
                                    </button>
                                }
                                @* STUDENT: Kayıt Ol / Kayıtlı *@
                                else if (User.IsInRole("Student"))
                                {
                                    bool isEnrolled = enrolledIds.Contains(course.CourseId);

                                    if (isEnrolled)
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            <i class="fas fa-check"></i> Kayıtlı
                                        </button>
                                    }
                                    else
                                    {
                                        <form asp-controller="StudentCourses"
                                              asp-action="Enroll"
                                              method="post"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="courseId" value="@course.CourseId" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-plus"></i> Kayıt Ol
                                            </button>
                                        </form>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

    <script>

        $(document).ready(function () {

            $(".delete-btn").click(function () {

                var id = $(this).data("id");

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu dersi geri alamazsınız!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Evet, Sil',
                    cancelButtonText: 'Vazgeç'
                }).then((result) => {

                    if (result.isConfirmed) {

                        $.ajax({

                            url: "/Course/Delete",
                            type: "POST",
                            data: { id: id },

                            success: function (result) {

                                if (result.success) {

                                    Swal.fire("Silindi!", result.message, "success");

                                    $("#row-" + id).fadeOut(500);

                                } else {

                                    Swal.fire("Hata", result.message, "error");
                                }
                            },

                            error: function () {
                                Swal.fire("Sunucu Hatası",
                                          "İstek sırasında hata oluştu!",
                                          "error");
                            }
                        });
                    }
                });
            });
        });

    </script>

}


