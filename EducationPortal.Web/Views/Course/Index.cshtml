@model List<EducationPortal.Web.Models.Course>

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Kurs Listesi</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Kayıtlı Kurslar</h6>

            <a asp-action="Add" class="btn btn-success btn-sm">
                <i class="fas fa-plus-circle"></i> Yeni Ders Ekle
            </a>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Ders Adı</th>
                        <th>Kredi</th>
                        <th>Öğretim Üyesi</th>
                        <th>Kategori</th>   @* <-- EKLENDİ *@
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.Title</td>
                            <td>@course.Credits</td>
                            <td>@course.Instructor</td>
                            <td>@course.CourseCategory?.Name</td>  @* <-- EKLENDİ *@
                            <td>
                                <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>

                                <form asp-action="Delete" asp-route-id="@course.CourseId" method="post" class="d-inline delete-form">
                                    <button type="button" class="btn btn-danger btn-sm delete-btn">
                                        <i class="fas fa-trash-alt"></i> Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.delete-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                var form = this.closest('form');

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu dersi geri alamazsınız!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Evet, Sil!',
                    cancelButtonText: 'Vazgeç'
                }).then((result) => {
                    if (result.isConfirmed) form.submit();
                });
            });
        });
    </script>
}
