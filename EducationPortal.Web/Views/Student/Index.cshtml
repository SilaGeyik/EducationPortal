@model List<EducationPortal.Web.Models.User>

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Öğrenci Listesi</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kayıtlı Öğrenciler</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>E-Posta</th>
                        <th>Rol</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.FullName</td>
                            <td>@student.Email</td>
                            <td>@student.Role</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
