@model List<EducationPortal.Web.Models.ViewModels.StudentListViewModel>

@{
    ViewData["Title"] = "Öğrenciler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="h3 mb-3 text-gray-800">Öğrenciler</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Öğrenci Listesi</h6>

        <div style="min-width: 320px;">
            <select id="courseFilter" class="form-control">
                <option value="0">Tüm Öğrenciler</option>
                @foreach (var c in (IEnumerable<dynamic>)ViewBag.Courses)
                {
                    <option value="@c.CourseId">@c.Title</option>
                }
            </select>
            <small class="text-muted">Kursa göre filtrele (AJAX)</small>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive" id="studentTableContainer">
            @Html.Partial("_StudentTable", Model)
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $("#courseFilter").on("change", function () {
                const courseId = $(this).val();

                $.ajax({
                    url: "/Student/FilterByCourse",
                    type: "GET",
                    data: { courseId: courseId },
                    success: function (html) {
                        $("#studentTableContainer").html(html);
                    },
                    error: function () {
                        Swal.fire("Hata", "Filtreleme sırasında hata oluştu.", "error");
                    }
                });
            });

        });
    </script>
}
