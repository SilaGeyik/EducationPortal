@*
    SB Admin 2 teması - ASP.NET Core uyumlu layout
*@

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Eğitim Portalı" />
    <meta name="author" content="Sıla Geyik" />
    <title>@ViewData["Title"] - Eğitim Portalı</title>

    <!-- Font Awesome -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,700,800,900" rel="stylesheet">

    <!-- SB Admin 2 CSS -->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />

    <!-- Site özel CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Dashboard" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Eğitim Portalı</div>
            </a>

            <hr class="sidebar-divider my-0" />

            <!-- Dashboard -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <hr class="sidebar-divider" />

            <div class="sidebar-heading">
                İçerikler
            </div>

            <!-- Menü Öğeleri -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Course" asp-action="Index">
                    <i class="fas fa-book"></i>
                    <span>Kurslar</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Student" asp-action="Index">
                    <i class="fas fa-users"></i>
                    <span>Öğrenciler</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Enrollment" asp-action="Index">
                    <i class="fas fa-clipboard-list"></i>
                    <span>Kayıtlar</span>
                </a>
            </li>

            <hr class="sidebar-divider d-none d-md-block" />

            <li class="nav-item">
                <a class="nav-link" asp-controller="Account" asp-action="Logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Çıkış Yap</span>
                </a>
            </li>

        </ul>
        <!-- End Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <span class="navbar-text font-weight-bold text-primary">
                        @ViewData["Title"]
                    </span>
                </nav>

                <!-- Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>&copy; 2025 Eğitim Portalı - Tüm Hakları Saklıdır</span>
                    </div>
                </div>
            </footer>

        </div>

    </div>

    <!-- Scroll to Top -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- JS Files -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/sb-admin-2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
